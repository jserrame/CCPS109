  #Duplicate digit bonus
  def duplicate_digit_bonus(n):
    digit = str(n)
    bonus = 0
    result = 1
    d = digit[0]
    for i in range(1,len(digit)):
        if d == digit[i]:
            result += 1
            if i+1 == len(digit):
                bonus += 2 * 10**(result-2)
        else:
            if result >=2:
                bonus += 10**(result-2)
            result = 1
        d = digit[i]
    return bonus
